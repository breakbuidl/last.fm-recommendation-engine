<%= form_tag(search_path, method: :get, role: 'form') do %>
  <div class="input-group">
    <%= search_field_tag :search_term, params[:search_term], placeholder: "Search artist here", class: "form-control" %>
    <div class="input-group-btn">
      <%= button_tag "", :class => 'btn btn-info glyphicon glyphicon-search',:name => nil%>
    </div>
  </div>
  <% if !logged_in? %>
    <small class="form-text text-muted">Log in to record your search queries.</small>
  <% end %>
<% end %>
