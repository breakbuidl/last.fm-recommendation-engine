<% provide(:title, @user.name) %>
<br><br>

<div class="container-fluid well span6">
  <div class="row-fluid">
    <div class="span2" >
      <%= gravatar_for @user %>
    </div>

    <div class="span8">
      <h3><%= @user.name %></h3>
      <h5 class="glyphicon glyphicon-envelope"> <%= @user.email %></h5>
    </div>
  </div>

  <br>
  <hr>

  <% if @user.searches.blank? %>

    <div class="alert alert-info" role="alert">
	    Info! Search something to display your search history here.
    </div>

  <% else %>

    <div class="container mt-5 mb-5">
	    <div class="row">
		    <div class="col-md-6 offset-md-3">
			    <h3 style="margin-top: -2px;">Search history</h3>
			    <ul class="timeline">
            <% @user_searches.each do |date, value| %>
				      <li>
					      <h4 class="float-right"><%= date %></h4>
                <table class="table table-dark">
                  <tbody>
                    <% value.each do |item| %>
                      <tr>
                        <td><%= item.created_at.strftime("%I:%M %p") %></td>
                        <td><%= item.search_query %></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
				      </li>
            <% end %>
			    </ul>
		   </div>
	    </div>
    </div>
  <% end %>
</div>
